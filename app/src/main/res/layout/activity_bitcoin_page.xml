<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitcoin_background">


    <TextView
        android:id="@+id/tvBitcoin_heading"
        android:layout_width="280dp"
        android:layout_height="59dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/allerta"
        android:text="@string/bitcoin_explore_heading"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBitcoin_body"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/bitcoin_explore_body"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBitcoin_heading" />

    <Button
        android:id="@+id/btnSkip"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBitcoin_body" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="86dp"
        android:layout_height="51dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/darklatesgray"
        android:text="Next"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBitcoin_body" />
</androidx.constraintlayout.widget.ConstraintLayout>