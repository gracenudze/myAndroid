<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frameCrypto"
        android:layout_width="180dp"
        android:layout_height="181dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shadow_10493" >

        <ImageView
            android:id="@+id/ivCrypto"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/bitcoin_logo" />

        <TextView
            android:id="@+id/tvCryptoNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/allerta"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="34dp"
            android:layout_height="41dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/up_logo" />

        <TextView
            android:id="@+id/tvCryptoHoldings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="90dp"
            android:text=""
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvCryptoPercentages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="90dp"
            android:text=""
            android:textStyle="bold"/>
    </FrameLayout>

</LinearLayout>